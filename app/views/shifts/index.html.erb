<h2><%=@organisation.name%></h2>
<h3>Shifts</h3>
<table>
    <tr>
        <th>Employee Name</th>
        <th>Shift Date</th>
        <th>Start Time</th>
        <th>Finish Time</th>
        <th>Break Length (minutes)</th>
        <th>Hours Worked</th>
        <th>Shift Cost</th>
    </tr>
    <% if !@shifts.empty? %>
        <% @shifts.each do |shift| %>
            <tr>
                <td><%=shift.user.name%></td>
                <td><%=shift.start %></td>
                <td><%=shift.start %></td>
                <td><%=shift.finish%></td>
                <td><%=shift.break_length%></td>
                <td><%= %></td>
                <td><%=@organisation.hourly_rate * (1) %></td>
            </tr>
        <% end %>
    <% end %>
    <tr>
    <%= form_for([current_user,@shift]) do |f| %>
        <td><%=current_user.name %></td>
        <%=f.hidden_field :user_id, value:current_user.id %>
        <%=f.fields_for :date do |date_form| %>
            <td><%=date_form.date_field :start_date %></td>
            <td><%= date_form.time_field :start %></td>
            <td><%= date_form.time_field :finish %></td>
        <% end %>
        <td><%= f.number_field :break_length %></td>
        <td><%= f.submit "Create Shift" %></td>
    <% end %>
    </tr>
</table>
